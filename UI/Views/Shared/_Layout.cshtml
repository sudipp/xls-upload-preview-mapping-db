<!DOCTYPE html>
<html lang="en" ng-app="spApp">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=11; IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @RenderPage(@"~/Views/Shared/include.cshtml", false)
</head>
<body>

    @RenderPage(@"~/Views/Shared/header.cshtml")

    <div class="container-fluid body-content" style="margin-bottom: 30px">
        @RenderBody()
    </div>
    @RenderPage(@"~/Views/Shared/include.cshtml", true)
    @RenderSection("scripts", required: false)
    <script>
    kendo.culture("en-US");
    </script>
</body>



</html>
